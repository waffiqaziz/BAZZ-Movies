{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  assignees: [
    'waffiqaziz',
  ],
  commitMessageAction: 'update',
  addLabels: [
    'dependencies',
  ],
  digest: {
    enabled: false,
  },
  packageRules: [
    {
      // Default prefix for all dependencies
      matchPackageNames: [
        '*',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      // Specific prefix for GitHub Actions
      matchDepTypes: [
        'action',
      ],
      commitMessagePrefix: 'chore(ci):',
    },
    {
      groupName: 'androidX core',
      matchPackageNames: [
        'androidx.core{/,}**',
        'androidx.activity{/,}**',
        'androidx.fragment{/,}**',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'androidX lifecycle',
      matchPackageNames: [
        'androidx.lifecycle{/,}**',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'androidX navigation',
      matchPackageNames: [
        'androidx.navigation{/,}**',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'androidX room',
      matchPackageNames: [
        'androidx.room{/,}**',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'androidX paging',
      matchPackageNames: [
        'androidx.paging{/,}**',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'firebase',
      matchPackageNames: [
        'com.google.firebase{/,}**',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'google services',
      matchPackageNames: [
        '/com.google.android.gms/',
        '/com.google.android.play/',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'networking libraries',
      matchPackageNames: [
        '/com.squareup.retrofit2/',
        '/com.squareup.moshi/',
        '/com.squareup.okhttp3/',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'testing libraries',
      matchPackageNames: [
        '/junit/',
        '/androidx.test/',
        '/androidx.arch.core:core-testing/',
        '/com.google.truth/',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'mocking libraries',
      matchPackageNames: [
        '/mockito/',
        '/mockk/',
      ],
      separateMajorMinor: true,
      commitMessagePrefix: 'chore(deps-mock):',
    },
    {
      groupName: 'hilt dependency injection',
      matchPackageNames: [
        'com.google.dagger{/,}**',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'android gradle plugin',
      separateMinorPatch: true,
      matchPackageNames: [
        '/com.android.tools.build/',
        '/com.android.application/',
        '/com.android.library/',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      groupName: 'GitHub Actions',
      matchDepTypes: [
        'action',
      ],
      digest: {
        enabled: false,
      },
      matchPackageNames: [
        'gradle/actions/{/,}**',
        'actions/{/,}**',
        'reactivecircus/{/,}**',
        'stefanzweifel/{/,}**',
        'marocchino/{/,}**',
        '!/^codecov//',
        '!/^codacy//',
      ],
      commitMessagePrefix: 'chore(ci):',
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: false,
      matchPackageNames: [
        '*',
        '!/com.android.tools.build/',
        '!/org.jetbrains.kotlin/',
        '!/com.google.devtools.ksp/',
        '!/androidx.room/',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
  ],
  ignoreDeps: [],
  prHourlyLimit: 5,
  prConcurrentLimit: 10,
  timezone: 'Asia/Jakarta',
  description: 'Schedule during typical non-office hours on weekdays (i.e., 10 PM - 5 AM) and anytime on weekends',
  schedule: [
    '* 0-4,22-23 * * 1-5',
    '* * * * 0,6',
  ],
}
