<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/container_search_no_result"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/iv_illustration_no_data"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:contentDescription="@string/search_illustration"
    android:src="@drawable/ic_no_found" />

  <TextView
    android:id="@+id/tv_header_noResult"
    style="@style/TextHeader1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-40dp"
    android:text="@string/sorry_no_result" />

  <TextView
    android:id="@+id/tv_no_data"
    style="@style/TextDivider"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/no_result_explanation" />

</LinearLayout>