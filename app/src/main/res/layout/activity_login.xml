<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/dark"
  android:id="@+id/constraint_layout"
  tools:context=".ui.activity.LoginActivity">

  <ImageView
    android:id="@+id/img_poster"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:contentDescription="@string/background_poster"
    android:src="@drawable/bg_login"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/img_bazz_logo"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:contentDescription="@string/bazz"
    android:src="@drawable/ic_bazz_logo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:fontFamily="@font/fugaz"
    android:text="@string/bazz"
    android:textColor="@color/white"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="@+id/img_bazz_logo"
    app:layout_constraintStart_toEndOf="@+id/img_bazz_logo"
    app:layout_constraintTop_toTopOf="@+id/img_bazz_logo" />

  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="16dp"
    android:fontFamily="@font/gothicb"
    android:text="@string/login"
    android:textColor="@color/white"
    android:textSize="40sp"
    app:layout_constraintBottom_toTopOf="@+id/ed_username"
    app:layout_constraintStart_toStartOf="parent" />

  <TextView
    android:id="@+id/tv_joinTMDB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:fontFamily="@font/gothic"
    android:text="@string/join"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="@+id/img_bazz_logo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/img_bazz_logo" />

  <EditText
    android:id="@+id/ed_username"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:autofillHints="emailAddress"
    android:fontFamily="@font/gothic"
    android:hint="@string/username"
    android:inputType="textEmailAddress"
    android:minHeight="48dp"
    android:textColor="@color/white"
    android:textColorHint="@color/light_gray"
    android:textColorLink="@color/white"
    app:layout_constraintBottom_toTopOf="@+id/ed_pass"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/textView"
    tools:ignore="DuplicateSpeakableTextCheck" />

  <EditText
    android:id="@+id/ed_pass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:autofillHints="password"
    android:fontFamily="@font/gothic"
    android:hint="@string/password"
    android:inputType="textPassword"
    android:minHeight="48dp"
    android:textColor="@color/white"
    android:textColorHint="@color/light_gray"
    android:textColorLink="@color/white"
    app:layout_constraintBottom_toTopOf="@+id/btn_login"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/textView"
    tools:ignore="LabelFor,DuplicateSpeakableTextCheck" />

  <ImageView
    android:id="@+id/btn_eye"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_marginEnd="20dp"
    android:contentDescription="@string/password"
    android:src="@drawable/ic_eye_off"
    app:layout_constraintBottom_toBottomOf="@+id/ed_pass"
    app:layout_constraintEnd_toEndOf="@+id/ed_pass"
    app:layout_constraintTop_toTopOf="@+id/ed_pass" />

  <Button
    android:id="@+id/btn_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:fontFamily="@font/gothicb"
    android:text="@string/login"
    android:textAllCaps="false"
    android:backgroundTint="@color/yellow"
    android:textColor="@color/dark_medium"
    app:layout_constraintBottom_toTopOf="@+id/tv_guest"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="DuplicateSpeakableTextCheck" />

  <TextView
    android:id="@+id/tv_guest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:fontFamily="@font/gothic"
    android:text="@string/guest_session"
    android:textColor="@color/white"
    app:layout_constraintBottom_toTopOf="@+id/tv_disclaimer"
    app:layout_constraintEnd_toEndOf="@+id/btn_login"
    app:layout_constraintStart_toStartOf="@+id/btn_login" />

  <TextView
    android:id="@+id/tv_disclaimer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:fontFamily="@font/gothic"
    android:gravity="center"
    android:text="@string/credit"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>