<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:background="@color/grey_700"
  tools:context=".ui.activity.home.TvSeriesFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="80dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_popular"
      style="@style/TextHeader2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:text="@string/popular" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_popular"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="8dp"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_trending"
      tools:orientation="horizontal"/>

    <TextView
      android:id="@+id/tv_airing_today"
      style="@style/TextHeader2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:text="@string/airing_today" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_now_playing"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="8dp"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_trending"
      tools:orientation="horizontal"/>

    <TextView
      android:id="@+id/tv_on_tv"
      style="@style/TextHeader2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:text="@string/on_tv" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_upcoming"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="8dp"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_trending"
      tools:orientation="horizontal"/>

    <TextView
      android:id="@+id/tv_top_rated"
      style="@style/TextHeader2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:text="@string/top_rated" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_top_rated"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="8dp"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_trending"
      tools:orientation="horizontal"/>

  </LinearLayout>

</ScrollView>