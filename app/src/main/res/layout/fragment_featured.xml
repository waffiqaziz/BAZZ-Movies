<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:background="@color/gray_400"
  tools:context=".ui.activity.home.FeaturedFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="80dp"
    android:orientation="vertical">

    <FrameLayout
      android:id="@+id/frame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/img_main_featured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/gray_400"
        android:contentDescription="@string/featured" />

      <View
        android:id="@+id/v_gradient"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@drawable/bg_gradient_shape" />
    </FrameLayout>

    <TextView
      android:id="@+id/tv_trending"
      style="@style/TextHeader1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="-20dp"
      android:text="@string/trending_now" />

    <androidx.recyclerview.widget.RecyclerView
      android:contentDescription="@string/trending_now"
      android:id="@+id/rv_trending"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="8dp"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_trending"
      tools:orientation="horizontal" />

    <TextView
      android:id="@+id/tv_latest_trailer"
      style="@style/TextHeader1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="16dp"
      android:text="@string/upcoming_movies" />

    <androidx.recyclerview.widget.RecyclerView
      android:contentDescription="@string/upcoming_movies"
      android:id="@+id/rv_upcoming"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="8dp"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_upcoming"
      tools:orientation="horizontal" />

    <TextView
      android:id="@+id/tv_playing_now"
      style="@style/TextHeader1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="16dp"
      android:text="@string/playing_now_on_theater" />

    <androidx.recyclerview.widget.RecyclerView
      android:contentDescription="@string/playing_now_on_theater"
      android:id="@+id/rv_playing_now"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="8dp"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_upcoming"
      tools:orientation="horizontal"/>
  </LinearLayout>


</ScrollView>