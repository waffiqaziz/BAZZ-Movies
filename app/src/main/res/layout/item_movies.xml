<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="horizontal"
  android:id="@+id/container_movies"
  android:layout_width="match_parent"
  tools:background="@color/dark_medium"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/iv_poster"
    android:adjustViewBounds="true"
    android:layout_width="150dp"
    android:layout_height="101.25dp"
    tools:src="@color/red_matte" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_title"
      style="@style/TextHeader1"
      android:layout_marginTop="2dp"
      android:maxLines="2"
      android:ellipsize="end"
      android:textSize="16sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      tools:text="Avenger Endgame" />

    <TextView
      android:id="@+id/tv_year_released"
      style="@style/TextDivider"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="4dp"
      tools:text="2021" />

    <TextView
      android:id="@+id/tv_genre"
      style="@style/TextDivider"
      android:maxLines="1"
      android:ellipsize="end"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="4dp"
      tools:text="Action, Superhero, MCU,Sci-fi" />
  </LinearLayout>





</LinearLayout>