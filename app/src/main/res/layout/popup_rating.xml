<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:background="@color/black">

  <View
    android:id="@+id/bg"
    android:layout_width="wrap_content"
    android:layout_height="249dp"
    android:background="@drawable/bg_alert"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/bg_top" />

  <View
    android:id="@+id/bg_top"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:background="@drawable/bg_alert_rating"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/your_rating"
    android:textColor="@color/grey_700"
    style="@style/TextHeader1"
    app:layout_constraintBottom_toBottomOf="@+id/bg_top"
    app:layout_constraintEnd_toEndOf="@+id/bg_top"
    app:layout_constraintStart_toStartOf="@+id/bg_top"
    app:layout_constraintTop_toTopOf="@+id/bg" />

  <RatingBar
    android:id="@+id/rating_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    app:layout_constraintEnd_toEndOf="@+id/bg"
    app:layout_constraintStart_toStartOf="@+id/bg"
    app:layout_constraintTop_toBottomOf="@+id/bg_top" />

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_no"
    style="@style/customButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="29dp"
    android:background="@drawable/ic_switch_button_off"
    android:fontFamily="@font/gothicb"
    android:insetBottom="0dp"
    android:padding="0dp"
    android:text="@string/cancel"
    android:textSize="20sp"
    app:layout_constraintStart_toStartOf="@+id/rating_bar"
    app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_yes"
    style="@style/customButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_switch_button_on"
    android:fontFamily="@font/gothicb"
    android:insetBottom="0dp"
    android:padding="0dp"
    android:text="@string/submit"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="@+id/rating_bar"
    app:layout_constraintTop_toTopOf="@+id/btn_no" />

</androidx.constraintlayout.widget.ConstraintLayout>