<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".pages.AboutActivity">

  <!-- ========================== -->
  <!--        HEADER SECTION      -->
  <!-- ========================== -->
  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <include layout="@layout/custom_toolbar_scroll_snap" />

  </com.google.android.material.appbar.AppBarLayout>
  <!-- End of HEADER SECTION -->

  <!-- ========================== -->
  <!--         BODY SECTION       -->
  <!-- ========================== -->
  <TextView
    android:id="@+id/tv_about_header"
    style="@style/TextHeader1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin_parent_20"
    android:layout_marginTop="8dp"
    android:text="@string/about"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/app_bar" />

  <TextView
    android:id="@+id/tv_tmdb_attribute"
    style="@style/TextBody"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin_parent_20"
    android:layout_marginTop="8dp"
    android:text="@string/tmdb_endorse"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_about_header" />

  <!-- ====== TMDB logo ====== -->
  <ImageView
    android:id="@+id/iv_tmdb_logo"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:contentDescription="@string/tmdb_full"
    android:src="@drawable/ic_tmdb"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent="0.20"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_tmdb_attribute"
    app:layout_constraintWidth_percent="0.20" />

  <TextView
    android:id="@+id/tv_about_text"
    style="@style/TextBody"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin_parent_20"
    android:text="@string/about_text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iv_tmdb_logo" />

  <!-- ====== About button ====== -->
  <Button
    android:id="@+id/btn_about_us"
    style="@style/MyTransparentButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:text="@string/about_us"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_about_text" />
  <!-- End of BODY SECTION -->

  <!-- ====== Back button ====== -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab"
    style="@style/MyFAB"
    android:layout_marginEnd="@dimen/default_margin_parent_20"
    android:layout_marginBottom="32dp"
    android:contentDescription="@string/submit"
    app:layout_constraintBottom_toBottomOf="parent"
    app:tint="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:rippleColor="@color/yellow_alpha_80"
    app:srcCompat="@drawable/ic_left_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>