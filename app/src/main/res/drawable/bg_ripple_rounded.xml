<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- State when the view is pressed -->
  <item android:state_pressed="true">
    <ripple android:color="?android:attr/colorControlHighlight">
      <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
          <corners android:radius="250dp" /> <!-- Adjust the radius to match the background -->
          <solid android:color="@android:color/white" /> <!-- Mask color -->
        </shape>
      </item>
    </ripple>
  </item>
  <!-- Default state -->
  <item>
    <shape android:shape="rectangle">
      <corners android:radius="8dp" /> <!-- Adjust the radius to change the roundness of corners -->
      <solid android:color="@android:color/transparent" /> <!-- Background color when not pressed -->
    </shape>
  </item>
</selector>