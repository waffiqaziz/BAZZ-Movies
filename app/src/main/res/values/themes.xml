<resources>
  <!-- Base application theme. -->
  <style name="Theme.BAZZ_movies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/grey_800</item>
    <item name="colorPrimaryVariant">@color/yellow</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorAccent">@color/grey_700</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <!--  Color for all background  -->
    <item name="android:windowBackground">@color/grey_700</item>

    <!--  Color divider recycle view  -->
    <item name="android:listDivider">@color/yellow_alpha_50</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor" >?attr/colorPrimary</item>

    <!--  SearchView  -->
    <item name="drawerArrowStyle">@style/MySearchViewTheme</item>
  </style>

  <style name="MySearchViewTheme" parent="Widget.AppCompat.SearchView">
    <!-- Gets rid of the search icon -->
    <item name="searchIcon">@drawable/ic_search</item>
    <!-- Gets rid of the "underline" in the text -->
    <item name="queryBackground">@color/white</item>
    <!-- Gets rid of the search icon when the SearchView is expanded -->
    <item name="searchHintIcon">@color/yellow</item>
  </style>

  <!-- Style for no action bar on manifest-->
  <style name="Theme.BAZZ_movies.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <!-- Style for tab layout -->
  <style name="TextTabLayoutStyle">
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">normal</item>
    <item name="fontFamily">@font/gothicb</item>
  </style>

  <style name="TextHeader1">
    <item name="android:textSize">25sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothicb</item>
  </style>

  <style name="TextHeader2">
    <item name="android:textSize">19sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothicb</item>
  </style>

  <style name="TextDivider">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/grey_400</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="TextCast">
    <item name="android:textSize">11sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="TextBody">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/grey_100</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="TextScore">
    <item name="android:padding">12dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/grey_100</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="TextScoreHeader">
    <item name="android:layout_marginTop">-12dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothic</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">90dp</item>
  </style>

  <!-- Style button on more page -->
  <style name="ButtonMoreStyle">
    <item name="android:paddingStart">20dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothic</item>
  </style>


  <!-- Style for button signOut on more page -->
  <style name="ButtonSignOut">
    <item name="strokeColor">@color/grey_400</item>
    <item name="textAllCaps">false</item>
    <item name="fontFamily">@font/gothicb</item>
    <item name="strokeWidth">0.8dp</item>
    <item name="android:textColor">@color/red_matte</item>
    <item name="backgroundTint">@color/grey_700</item>
  </style>

  <style name="customButton">
    <item name="textAllCaps">false</item>
    <item name="android:minHeight">39dp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
  </style>

  <!-- Style for image view on favorite/watchlist page user login -->
  <style name="roundedCornersImageView" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">15dp</item>
  </style>

</resources>