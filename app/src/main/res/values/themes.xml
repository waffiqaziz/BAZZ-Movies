<resources>
  <!-- Base application theme. -->
  <style name="Theme.BAZZ_movies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/dark</item>
    <item name="colorPrimaryVariant">@color/yellow</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorAccent">@color/dark_medium</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" >?attr/colorPrimary</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.BAZZ_movies.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="ToolbarTheme" parent="Theme.BAZZ_movies">
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:background">?attr/colorPrimaryVariant</item>
    <item name="textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">@font/gothicb</item>
  </style>

  <style name="TextTabLayoutStyle">
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">normal</item>
    <item name="fontFamily">@font/gothicb</item>
  </style>

  <style name="TextHeader1">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothicb</item>
  </style>

  <style name="TextHeader2">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothicb</item>
  </style>

  <style name="TextDivider">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/light_gray</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="TextCast">
    <item name="android:textSize">10sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">@color/white</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="TextBody">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="ButtonMoreStyle">
    <item name="android:paddingStart">20dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/gothic</item>
  </style>

  <style name="SearchViewStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textColorHint">@color/white</item>
  </style>

  <style name="ButtonSignOut">
    <item name="strokeColor">@color/light_gray</item>
    <item name="textAllCaps">false</item>
    <item name="fontFamily">@font/gothicb</item>
    <item name="strokeWidth">0.8dp</item>
    <item name="android:textColor">@color/red_matte</item>
    <item name="backgroundTint">@color/dark_medium</item>
  </style>

  <style name="customButton">
    <item name="textAllCaps">false</item>
    <item name="android:minHeight">39dp</item>
    <item name="android:textColor">@color/white</item>
  </style>

</resources>