<resources>
  <!-- Base application theme -->
  <style name="Base.Theme.BAZZ_movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color -->
    <item name="colorPrimary">@color/gray</item>
    <item name="colorPrimaryVariant">@color/yellow</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorAccent">@color/gray_800</item>
    <item name="colorOnBackground">@color/gray_900</item>

    <!-- Secondary brand color -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- Color for all background -->
    <item name="android:windowBackground">@color/gray_900</item>

    <!-- Color divider recycle view -->
    <item name="android:listDivider">@color/yellow_alpha_80</item>

    <!-- Status Bar -->
    <item name="android:statusBarColor">?attr/colorPrimary</item>

    <!-- Search View -->
    <item name="drawerArrowStyle">@style/MySearchViewTheme</item>

    <!-- Bottom Sheet -->
    <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
  </style>

  <style name="WindowAnimationStyle">
    <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    <item name="android:windowExitAnimation">@android:anim/fade_out</item>
  </style>

  <!-- Splash Screen for RoutingActivity on Manifests -->
  <style name="SplashScreenTheme" parent="Theme.SplashScreen">
    <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
    <item name="windowSplashScreenBackground">@color/gray</item>
    <item name="windowSplashScreenAnimationDuration">1000</item>
    <item name="postSplashScreenTheme">@style/Base.Theme.BAZZ_movies</item>
  </style>

  <style name="AppBottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog" />

  <style name="MyResetButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="fontFamily">@font/nunito_sans_bold</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray_900</item>
  </style>

  <style name="MyFAB" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="android:layout_gravity">end|bottom</item>
    <item name="android:backgroundTint">@color/yellow</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MyApplyButton" parent="Widget.MaterialComponents.Button">
    <item name="fontFamily">@font/nunito_sans_bold</item>
    <item name="android:backgroundTint">@color/yellow</item>
    <item name="android:textColor">@color/gray_900</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginStart">4dp</item>
  </style>

  <style name="MySwitchRadioButton">
    <item name="android:background">@drawable/bg_switch_selector</item>
    <item name="android:textColor">@color/radio_button_state</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_marginTop">1dp</item>
    <item name="android:layout_marginBottom">1dp</item>
    <item name="fontFamily">@font/nunito_sans_bold</item>
  </style>

  <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="itemTextAppearanceActive">@style/CustomBottomNavigationTextAppearance</item>
    <item name="itemTextAppearanceInactive">@style/CustomBottomNavigationTextAppearance</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_gravity">bottom</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="CustomBottomNavigationTextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:fontFamily">@font/nunito_sans_regular</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="MyDimStyle">
    <item name="android:background">@color/gray_900</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_width">0dp</item>
  </style>

  <style name="MyDimStyleMatchParent">
    <item name="android:background">@color/gray_900</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="MyProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:animateLayoutChanges">true</item>
    <item name="android:indeterminateTint">@color/yellow</item>
    <item name="android:indeterminate">true</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="MyLoginButtonPortrait" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:fontFamily">@font/nunito_sans_bold</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/gray_900</item>
    <item name="android:backgroundTint">@color/yellow</item>
  </style>

  <style name="MyTransparentButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/nunito_sans_regular</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">?attr/selectableItemBackground</item>
  </style>

  <style name="MyLoginButtonLand" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">450dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">4dp</item>
    <item name="android:fontFamily">@font/nunito_sans_bold</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/gray_900</item>
    <item name="android:backgroundTint">@color/yellow</item>
  </style>

  <style name="MySpaceDetailPage">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="MySocialMediaButton">
    <item name="android:padding">12dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <!-- Style for SearchView -->
  <style name="MySearchViewTheme" parent="Widget.AppCompat.SearchView">
    <!-- Gets rid of the search icon -->
    <item name="searchIcon">@drawable/ic_search</item>
    <!-- Gets rid of the "underline" in the text -->
    <item name="queryBackground">@color/white</item>
    <!-- Gets rid of the search icon when the SearchView is expanded -->
    <item name="searchHintIcon">@color/yellow</item>
  </style>

  <!-- Style for tab layout -->
  <style name="TextTabLayoutStyle">
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">normal</item>
    <item name="textAllCaps">false</item>
    <item name="fontFamily">@font/nunito_sans_bold</item>
  </style>

  <style name="TextHeader1">
    <item name="android:textSize">26sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/nunito_sans_bold</item>
  </style>

  <style name="TextHeader2">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/nunito_sans_bold</item>
  </style>

  <style name="TextHeader3">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/nunito_sans_bold</item>
  </style>

  <style name="TextDivider">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/gray_400</item>
    <item name="fontFamily">@font/nunito_sans_regular</item>
  </style>

  <style name="TextCast">
    <item name="android:textSize">12sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/nunito_sans_regular</item>
  </style>

  <style name="TextBody">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/gray_100</item>
    <item name="fontFamily">@font/nunito_sans_regular</item>
  </style>

  <style name="TextScore">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/gray_100</item>
    <item name="fontFamily">@font/nunito_sans_regular</item>
  </style>

  <style name="TextScoreHeader">
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/nunito_sans_bold</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
  </style>

  <!-- Style button on more page -->
  <style name="ButtonMoreStyle">
    <item name="android:paddingStart">20dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="fontFamily">@font/nunito_sans_regular</item>
  </style>

  <!-- Style for button signOut on more page -->
  <style name="ButtonSignOut">
    <item name="strokeColor">@color/gray_400</item>
    <item name="textAllCaps">false</item>
    <item name="fontFamily">@font/nunito_sans_bold</item>
    <item name="strokeWidth">0.8dp</item>
    <item name="android:textColor">@color/red_matte</item>
    <item name="backgroundTint">@android:color/transparent</item>
  </style>

  <style name="customButton">
    <item name="textAllCaps">false</item>
    <item name="android:minHeight">39dp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
  </style>

  <!-- Style for image view on favorite/watchlist page user login -->
  <style name="roundedCornersImageView" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">15dp</item>
  </style>

</resources>